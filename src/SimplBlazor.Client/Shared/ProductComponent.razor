
<div class="widget">
    <a href="#" class="widget__image">
        <img src="~/images/products/@Data.Thumbnail" alt="product">
    </a>
    <div class="widget__footer">
        <a href="#" class="product__name">@Data.Name</a>
        <div class="align-items-center d-flex justify-content-between">
            <div>
                <div class="price price__current">$@Data.Price</div>
                @if (Data.OldPrice > 0)
                {
                    <div class="price price__old">$@Data.OldPrice</div>
                }
            </div>
            <div>
                <i class="zmdi zmdi-star-outline"></i>
                <i class="zmdi zmdi-star-outline"></i>
                <i class="zmdi zmdi-star-outline"></i>
                <i class="zmdi zmdi-star-outline"></i>
                <i class="zmdi zmdi-star-outline"></i>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public Product Data { get; set; }
}
